# SoftAutoEvolve Configuration
# Copy this file to .env and configure your repository paths

# ============================================================================
# Repository Paths
# ============================================================================

# Path to the Claude Code repository
# Default: /home/hemang/Documents/GitHub/claude-code
CLAUDE_CODE_PATH=/home/hemang/Documents/GitHub/claude-code

# Path to the Spec-Kit repository
# Default: /home/hemang/Documents/GitHub/hjLabs.in-spec-kit
SPEC_KIT_PATH=/home/hemang/Documents/GitHub/hjLabs.in-spec-kit

# URL to Spec-Kit repository (for uvx installation)
# Default: git+https://github.com/hemangjoshi37a/hjLabs.in-spec-kit
SPEC_KIT_REPO_URL=git+https://github.com/hemangjoshi37a/hjLabs.in-spec-kit

# Path to the ShinkaEvolve repository
# Default: /home/hemang/Documents/GitHub/hjLabs.in-ShinkaEvolve
SHINKA_EVOLVE_PATH=/home/hemang/Documents/GitHub/hjLabs.in-ShinkaEvolve

# ============================================================================
# Python Configuration
# ============================================================================

# Python executable path (default: python3)
PYTHON_PATH=python3

# UV package manager path (default: uv)
UV_PATH=uv

# ============================================================================
# Evolution Configuration
# ============================================================================

# Default number of evolution generations (default: 10)
DEFAULT_NUM_GENERATIONS=10

# Default maximum parallel jobs (default: 2)
DEFAULT_MAX_PARALLEL_JOBS=2

# Default LLM models for evolution (comma-separated)
# Example: azure-gpt-4.1-mini,gpt-4o-mini
DEFAULT_LLM_MODELS=azure-gpt-4.1-mini

# ============================================================================
# Claude Code Configuration
# ============================================================================

# Claude Code CLI path (auto-detected if not specified)
# Example: /usr/local/bin/claude
# CLAUDE_CLI_PATH=

# Enable enhanced mode (default: true)
ENHANCED_MODE=true

# ============================================================================
# Feature Flags
# ============================================================================

# Enable automatic dependency installation (default: false)
AUTO_INSTALL_DEPS=false

# Enable verbose logging (default: false)
VERBOSE=false

# Enable experimental features (default: false)
EXPERIMENTAL=false
